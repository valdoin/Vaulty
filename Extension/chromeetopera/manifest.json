{
  "manifest_version": 3,
  "name": "Vaulty Autofill",
  "version": "1.0",
  "description": "Remplit automatiquement les identifiants depuis Vaulty.",
  "permissions": ["activeTab", "scripting"],
  
  "host_permissions": [
    "http://localhost:50000/*",
    "<all_urls>"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],

  "action": {
    "default_title": "Vaulty Autofill"
  }
}
